<?xml version="1.0" encoding="utf-8"?>
<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="100%" 
	height="100%" 
	label="Login"
	horizontalAlign="center">
	
	<mx:Metadata>
		[Event(name="alertCreate", type="com.matlabulchifai.events.alert.AlertEvent")]
	</mx:Metadata>

<mx:Script>
<![CDATA[
    import mx.rpc.events.ResultEvent;
    import mx.collections.XMLListCollection;
    import com.matlabulchifai.events.alert.AlertEvent;
    
    [Bindable]
	public var patientsXLC:XMLListCollection;

	private function getPatientName(item:Object):String {
    	return item.last_name + ", " + item.first_name + " " + item.middle_name;
    }
    
    private function createAlert():void {
    	svcAlertCreate.send();
    }
    
    private function clearForm():void {
			dateTI.text = "";
			noteTA.text = "";
    }
    
    private function handleNewAlertResult(event:ResultEvent):void{
		var resultXML:XML = XML(event.result);
		Matlabulchifai.debug("alert created = \n" + resultXML);
		dispatchEvent(new AlertEvent(AlertEvent.ALERT_CREATE, resultXML));
		clearForm(); 
	}
	[Bindable]
	public var languageArray:Object;
    
]]>
</mx:Script>

<mx:HTTPService
	id="svcAlertCreate"
	url="/alerts.xml"
	resultFormat="e4x"
	contentType="application/xml"
	method="POST"
	result="handleNewAlertResult(event)">
	<mx:request>
		<alert>
			<active>true</active>
			<alert_date>{dateTI.text}</alert_date>
			<alert_note>{noteTA.text}</alert_note>
			<patient_id>{XML(patientsCB.selectedItem).id}}</patient_id>
		</alert>
	</mx:request>
</mx:HTTPService>
	
	<mx:Panel title="Add Alert" horizontalAlign="center">
		<mx:Form id="createAlertForm">
			<mx:FormItem label="Patient">
	            <mx:ComboBox id="patientsCB" width="175"
	                labelFunction="getPatientName"
	                dataProvider="{patientsXLC}"/>
        	</mx:FormItem>
			<mx:FormItem required="true" label="Alert Date">
				<mx:DateField id="dateTI" yearNavigationEnabled="true" minYear="1980" />
			</mx:FormItem>
        	
			<mx:FormItem required="true" label="Alert Note">
				<mx:TextArea id="noteTA"/>
			</mx:FormItem>			
			<mx:FormItem>
				<mx:Button id="createAlertButton" label="Create" click="createAlert()"/>
			</mx:FormItem>	
		</mx:Form>
	</mx:Panel>
	
</mx:VBox>
