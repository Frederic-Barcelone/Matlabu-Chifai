<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="vertical" 
	width="600" 
	height="450"
	title="Add New Allergy"
	showCloseButton="true"
    close="PopUpManager.removePopUp(this)">
	
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			[Bindable]
			public var patient:XML;
			
			private function processAllergyCreate():void{
				// add vaccination to database
				//  on error: display error, don't close popup?
				//  on success: remove popup, throw event to PatientInfo
				//   to refresh datagrid
				
			
				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
	<mx:VBox verticalAlign="middle" horizontalAlign="center" width="100%" height="85%">
		<mx:Form>
			<mx:Label text="{patient['last_name']}, {patient['first_name']}" fontWeight="bold" />
			<mx:Spacer height="5" />
			<mx:FormItem label="Allergy">
				<mx:TextInput id="allergyNameTI" width="100%"/>
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Severity, 10 being most severe">
				
				<mx:ComboBox> 
					<mx:ArrayCollection>
					<mx:Number>1</mx:Number>
					<mx:Number>2</mx:Number>
					<mx:Number>3</mx:Number>
					<mx:Number>4</mx:Number>
					<mx:Number>5</mx:Number>
					<mx:Number>6</mx:Number>
					<mx:Number>7</mx:Number>
					<mx:Number>8</mx:Number>
					<mx:Number>9</mx:Number>
					<mx:Number>10</mx:Number>
					
					</mx:ArrayCollection>
				</mx:ComboBox>

			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Date">
				<mx:DateField id="allergyDateDC" yearNavigationEnabled="true" minYear="1980" />
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Notes">
				<mx:TextArea id="allergyNotesTI" width="200" height="150" />
			</mx:FormItem>
		</mx:Form>
	</mx:VBox>
	
	
	<mx:HBox horizontalAlign="center" verticalAlign="middle" width="100%" height="15%">
		<mx:Button label="OK" id="OKBtn" click="processAllergyCreate()" />
		<mx:Button label="Cancel" id="CancelBtn" click="PopUpManager.removePopUp(this)" />
	</mx:HBox>
	
</mx:TitleWindow>
