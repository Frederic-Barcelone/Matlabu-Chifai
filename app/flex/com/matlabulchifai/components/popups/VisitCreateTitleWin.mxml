<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
	layout="vertical" 
	width="425" 
	height="550"
	title="{languageArray['Add New Visit']}"
	showCloseButton="true"
	creationComplete="init()"
    close="PopUpManager.removePopUp(this)">
	
	<mx:Script>
		<![CDATA[
			import flash.events.Event;
			import mx.collections.ArrayCollection;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import com.matlabulchifai.events.patient.VisitEvent;
			import com.matlabulchifai.events.patient.ConditionEvent;
			import com.matlabulchifai.events.patient.VisitTypeEvent;
			
			import mx.core.Application;
			
			[Bindable]
			public var patient:XML;
			[Bindable]
			public var patientID:Number;
			[Bindable]
			public var conditionIdMap:Object;
			[Bindable]
			public var visitTypeIdMap:Object;
			[Bindable]
			public var doctorIdMap:Object;
			[Bindable]
			private var conditions:ArrayCollection;
			[Bindable]
			private var visitTypes:ArrayCollection;
			[Bindable]
			private var doctors:ArrayCollection;
			[Bindable]
			public var languageArray:Object;
			
			
			private function init():void {
				initVisitType();
				initConditions();
				initDoctors();
			}
			
			private function initVisitType():void {
				var i:int;
				visitTypes = new ArrayCollection();
				for (i = 1; visitTypeIdMap[i] != null; i++) {
					var vt:XML = visitTypeIdMap[i];
					visitTypes.addItem( { label: vt.name, data: vt.name } );
				}
				visitTypes.addItem( { label:"New...", data:"" } );
			}
			
			private function initConditions():void {
				var i:int;
				conditions = new ArrayCollection();
				for (i = 1; conditionIdMap[i] != null; i++) {
					var cond:XML = conditionIdMap[i];
					conditions.addItem( { label: cond.name, data: cond.name } );
				}
				conditions.addItem( { label:"Other...", data:"" } );
			}
			
			private function initDoctors():void {
				var i:int;
				doctors = new ArrayCollection();
				for (i = 1; doctorIdMap[i] != null; i++) {
					var doctor:XML = doctorIdMap[i];
					doctors.addItem( { label: doctor.first_name + " " + 
						doctor.middle_name + " " + doctor.last_name, data: doctor.id } );
				}
			}
				
			private function processVisitCreate():void{
				svcVisitCreate.send();
				PopUpManager.removePopUp(this);
			}
			
			private function handleNewVisitResult(event:ResultEvent):void {
				var resultXML:XML = XML(event.result);
				Matlabulchifai.debug("visit created = \n" + resultXML);
				dispatchEvent(new VisitEvent(VisitEvent.VISIT_CREATE, resultXML));
			}
			
			private function checkConditionCB(event:Event):void {
				if (conditionCB.selectedLabel == "Other...") {
					otherTI.enabled = true;
				} else {
					otherTI.text = "";
					otherTI.enabled = false;
				}
			}
			
			private function checkTypeCB(event:Event):void {
				if (typeCB.selectedLabel == "New...") {
					newTI.enabled = true;
				} else {
					newTI.text = "";
					newTI.enabled = false;
				}
			}
			
		]]>
	</mx:Script>
	
	<mx:Metadata>
		[Event(name="visitCreate", type="com.matlabulchifai.events.patient.VisitEvent")]
	</mx:Metadata>
	
	<mx:HTTPService
		id="svcVisitCreate"
		url="/patient_visits.xml?authenticity_token={Application.application.parameters.authenticityToken}"
		resultFormat="e4x"
		contentType="application/xml"
		method="POST"
		result="handleNewVisitResult(event)">
		<mx:request>
			<patient_visit>
				<condition>{conditionCB.value + otherTI.text}</condition>
				<type>{typeCB.value + newTI.text}</type>
				<visit_date>{visitDateDF.text}</visit_date>
				<notes>{visitNotesTA.text}</notes>
				<height>{HeightTI.text}</height>
				<weight>{WeightTI.text}</weight>
				<blood_pressure>{BloodPressureTI.text}</blood_pressure>
				<pulse>{PulseTI.text}</pulse>
				<temperature>{TemperatureTI.text}</temperature>
				<doctor>{String(doctorCB.value)}</doctor>
				<patient_id>{patientID}</patient_id>
			</patient_visit>
		</mx:request>
	</mx:HTTPService>
	
	
	<mx:VBox verticalAlign="middle" horizontalAlign="center" width="100%" height="85%">
		<mx:Form>
			<mx:Label text="{patient['last_name']}, {patient['first_name']}" fontWeight="bold" fontSize="10" />					
			<mx:Spacer height="5" />
			<mx:FormItem label="Visit Type">
				<mx:ComboBox id="typeCB" dataProvider="{visitTypes}" change="checkTypeCB(event)" />
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="New" paddingLeft="10">
				<mx:TextInput id="newTI" enabled="false" width="100%"/>
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Condition">
			<mx:ComboBox id="conditionCB" dataProvider="{conditions}" change="checkConditionCB(event)" />
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Other" paddingLeft="10">
				<mx:TextInput id="otherTI" enabled="false" width="100%"/>
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Date">
				<mx:DateField id="visitDateDF" yearNavigationEnabled="true" minYear="1980"
					creationComplete="visitDateDF.selectedDate = new Date();" />
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Doctor">
				<mx:ComboBox id="doctorCB" dataProvider="{doctors}" />
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:Text text="Physicals" fontWeight="bold" />
			<mx:FormItem label="Height">
				<mx:TextInput id="HeightTI" width="100%"/>
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Weight">
				<mx:TextInput id="WeightTI" width="100%"/>
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Blood Pressure">
				<mx:TextInput id="BloodPressureTI" width="100%"/>
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Pulse">
				<mx:TextInput id="PulseTI" width="100%"/>
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Temperature">
				<mx:TextInput id="TemperatureTI" width="100%"/>
			</mx:FormItem>
			<mx:Spacer height="5" />
			<mx:FormItem label="Notes">
				<mx:TextArea id="visitNotesTA" width="200" height="150" />
			</mx:FormItem>
		</mx:Form>
	</mx:VBox>
	
	
	<mx:HBox horizontalAlign="center" verticalAlign="middle" width="100%" height="15%">
		<mx:Button label="OK" id="OKBtn" click="processVisitCreate()" />
		<mx:Button label="{languageArray['Cancel']}" id="CancelBtn" click="PopUpManager.removePopUp(this)" />
	</mx:HBox>
	
</mx:TitleWindow>
