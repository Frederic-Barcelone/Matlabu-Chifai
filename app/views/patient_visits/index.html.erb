<h1>Listing patient_visits</h1>

<table>
  <tr>
    <th>Patient</th>
    <th>Doctor</th>
    <th>Visit type</th>
    <th>Condition</th>
    <th>Visit date</th>
    <th>Height</th>
    <th>Weight</th>
    <th>Blood pressure</th>
    <th>Pulse</th>
    <th>Temperature</th>
    <th>Notes</th>
  </tr>

<% for patient_visit in @patient_visits %>
  <tr>
    <td><%=h patient_visit.patient_id %></td>
    <td><%=h patient_visit.doctor_id %></td>
    <td><%=h patient_visit.visit_type_id %></td>
    <td><%=h patient_visit.condition_id %></td>
    <td><%=h patient_visit.visit_date %></td>
    <td><%=h patient_visit.height %></td>
    <td><%=h patient_visit.weight %></td>
    <td><%=h patient_visit.blood_pressure %></td>
    <td><%=h patient_visit.pulse %></td>
    <td><%=h patient_visit.temperature %></td>
    <td><%=h patient_visit.notes %></td>
    <td><%= link_to 'Show', patient_visit %></td>
    <td><%= link_to 'Edit', edit_patient_visit_path(patient_visit) %></td>
    <td><%= link_to 'Destroy', patient_visit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

