<h1>Listing patient_medications</h1>

<table>
  <tr>
    <th>Medication</th>
    <th>Patient</th>
    <th>Doctor</th>
    <th>Condition</th>
    <th>Date given</th>
    <th>Dosage</th>
    <th>Frequency</th>
    <th>Notes</th>
  </tr>

<% @patient_medications.each do |patient_medications| %>
  <tr>
    <td><%=h patient_medications.medication %></td>
    <td><%=h patient_medications.patient %></td>
    <td><%=h patient_medications.doctor %></td>
    <td><%=h patient_medications.condition %></td>
    <td><%=h patient_medications.date_given %></td>
    <td><%=h patient_medications.dosage %></td>
    <td><%=h patient_medications.frequency %></td>
    <td><%=h patient_medications.notes %></td>
    <td><%= link_to 'Show', patient_medications %></td>
    <td><%= link_to 'Edit', edit_patient_medications_path(patient_medications) %></td>
    <td><%= link_to 'Destroy', patient_medications, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

